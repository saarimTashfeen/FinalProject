<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TitleScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CST2335 Final Group Project"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/GoToGeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/geoToolbar"
        android:layout_below="@id/TitleScreenTitle"/>

    <Button
        android:id="@+id/GoToLyricsSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lyricsToolbar"
        android:layout_below="@id/GoToGeo"/>


    <Button
        android:id="@+id/GoToDeezerSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deezerToolbar"
        android:layout_below="@id/GoToLyricsSearch"/>
</RelativeLayout>